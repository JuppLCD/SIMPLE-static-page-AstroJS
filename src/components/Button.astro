---
export interface Props {
	type?: 'button' | 'submit' | 'reset';
	className?: string;
}
const { type = 'button', className } = Astro.props;
---

<button class={`btn ${className}`} type={type}>
	<slot />
</button>

<style lang='scss'>
	@import './../sass/variables';

	.btn {
		background-color: $colorPrimario;
		padding: 10px 20px;
		font-family: $fontstitle;
		font-weight: 300;
		font-size: 1.1rem;
		border: none;
		border-radius: 5px;
		text-transform: uppercase;
		cursor: pointer;
	}
</style>
