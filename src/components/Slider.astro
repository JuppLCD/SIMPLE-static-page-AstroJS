---
export interface Props {
	urlsImages: string[];
}
import Button from './Button.astro';
import Container from './Container.astro';

const { urlsImages } = Astro.props;
---

<section class='slider'>
	<Container>
		<div class='imgBx'>
			<div class='flecha flecha-izquierda'><i class='fas fa-chevron-left'></i></div>
			<img class='slider__img' src={urlsImages[0]} />
			<div class='flecha flecha-derecha'><i class='fas fa-chevron-right'></i></div>
		</div>
		<div class='slider__imagenes'>
			{urlsImages.map((url) => <img src={url} />)}
		</div>
		<Button className='btn-block'>Aprender m√°s</Button>
	</Container>
</section>

<script>
	// SLIDER
	const slider = document.querySelector('.slider__img') as HTMLElement;
	const imagenes = document.querySelectorAll('.slider__imagenes img') as NodeListOf<HTMLElement>;
	const flechaIzquierda = document.querySelector('.flecha-izquierda') as HTMLElement;
	const flechaDerecha = document.querySelector('.flecha-derecha') as HTMLElement;

	// SELECCIONAR IMG
	const obtenerSrc = (imagen: HTMLElement) => {
		let srcAtributo = imagen.getAttribute('src') as string;
		slider.setAttribute('src', srcAtributo);
	};

	imagenes.forEach((imagen) => {
		imagen.addEventListener('click', () => {
			obtenerSrc(imagen);
		});
	});

	// FLECHAS
	const largoArray = imagenes.length - 1;
	let indice = 0;

	const cambioFlechas = (numero: number) => {
		indice += numero;

		if (largoArray >= indice && 0 <= indice) {
			obtenerSrc(imagenes[indice]);
			return;
		} else {
			if (numero == -1) {
				indice = largoArray;
				obtenerSrc(imagenes[indice]);
			} else {
				indice = 0;
				obtenerSrc(imagenes[indice]);
			}
		}
	};

	flechaIzquierda.addEventListener('click', () => {
		cambioFlechas(-1);
	});

	flechaDerecha.addEventListener('click', () => {
		cambioFlechas(+1);
	});
</script>

<style lang='scss'>
	@import './../sass/variables';

	.slider {
		background-color: $backgroundColorTwo;
		padding: 50px 10px;
		.conteiner {
			display: flex;
			align-items: center;
			justify-content: center;
			flex-direction: column;
		}
		.imgBx {
			width: 100%;
			min-height: 450px;
			max-height: 580px;
			position: relative;
		}
		&__img {
			width: 100%;
			height: 100%;
			border-radius: 20px;
			position: absolute;
			top: 0;
			left: 0;
		}
		&__imagenes {
			margin: 20px 0;

			display: flex;
			align-items: center;
			justify-content: center;
			flex-wrap: wrap;

			img {
				width: 50px;
				height: 50px;
				border-radius: 10px;
				filter: grayscale(1);
				margin: 20px;
				cursor: pointer;
			}
		}
	}

	.flecha {
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background-color: $colorPrimario;
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		cursor: pointer;
		z-index: 1;
		opacity: 0.9;

		display: flex;
		align-items: center;
		justify-content: center;

		i {
			color: #fff;
			font-size: 20px;
		}
		&-izquierda {
			left: 5px;
		}
		&-derecha {
			right: 5px;
		}
	}
	.btn-block {
		display: block;
		margin: 0 auto;
	}
</style>
