---
export interface Props {
	score: number;
	title: string;
	text: string;
}

const { score, title, text } = Astro.props;
---

<div class='card-info'>
	<h2>{score}</h2>
	<h3>{title}</h3>
	<p>{text}</p>
</div>

<style lang='scss'>
	@import './../sass/variables';

	.card-info {
		max-width: 280px;
		min-width: 220px;
		background-color: $colorSecundario;
		position: relative;
		text-align: center;
		padding: 70px 10px 70px 10px;
		margin: 0 10px;
		margin-bottom: 30px;

		&::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 15px;
			background-color: $colorPrimario;
		}
	}
</style>
