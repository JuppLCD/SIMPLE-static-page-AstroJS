---
export interface Props {
	icon: string;
	title: string;
	text: string;
}
const { icon, title, text } = Astro.props;
---

<div class='card_icon'>
	<span><i class={icon}></i></span>

	<h3>{title}</h3>
	<p>{text}</p>
</div>
<style lang='scss'>
	@import './../sass/variables';

	.card_icon {
		max-width: 300px;
		min-width: 250px;
		margin: 30px 10px;

		p {
			color: $colorFooter;
		}
		h3 {
			margin-top: 50px;
			margin-bottom: 20px;
		}
		span {
			display: flex;
			align-items: center;
			justify-content: center;
			margin: 0 auto;
			width: 80px;
			height: 80px;
			border-radius: 20px;
			background-color: $colorPrimario;
		}
		i {
			color: #fff;
			font-size: 40px;
		}
	}
</style>
