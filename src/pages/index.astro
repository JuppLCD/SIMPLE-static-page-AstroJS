---
import Layout from '../layouts/Layout.astro';

import Introduction from '@sections/introduction.astro';
import Welcome from '@sections/Welcome.astro';
import Features from '@sections/Features.astro';
import Mission from '@sections/Mission.astro';
import Slider from '@components/Slider.astro';
import Team from '@sections/Team.astro';
import Info from '@sections/Info.astro';
import Contact from '@sections/Contact.astro';

const urlsImages = [
	'https://cumbrepuebloscop20.org/wp-content/uploads/2017/09/medio-ambiente.jpg',
	'http://4.bp.blogspot.com/-E7bPPfQVr0w/T8bOZC8-XpI/AAAAAAAAeYI/lguz3krSlQk/s1600/Bosque-de-Pinos-Paisajes-Naturales-en-HD.jpg',
	'https://img.ecologiahoy.com/2017/06/paisajes-naturales-26-1024x640.jpeg',
	'https://3.bp.blogspot.com/-JK4NV_40xsk/VC7k3m9BKMI/AAAAAAACUw4/-87bf4K5Vag/s1600/fotos+gratis+de+paisajes+naturales,+bosques,+monta%C3%B1as,+r%C3%ADos+y+lagos+(4).jpg',
	'https://s3.amazonaws.com/arc-wordpress-client-uploads/infobae-wp/wp-content/uploads/2017/06/05110241/ambientes-del-hogar-1920-2.jpg',
	'https://decohunter.com/wp-content/uploads/2019/10/separador-de-ambientes.png',
];
---

<Layout title='Welcome to Astro.'>
	<Introduction />
	<Welcome />
	<Features />
	<Mission />
	<Slider urlsImages={urlsImages} />
	<Team />
	<Info />
	<Contact />
</Layout>

<style is:global lang='scss'>
	@import './../sass/variables';

	body,
	h1,
	h2,
	h3,
	p {
		margin: 0;
		padding: 0;
	}

	a {
		text-decoration: none;
		padding: 7px 10px;
	}
	i {
		font-size: 30px;
		color: black;
	}

	h1 {
		font-size: 1.875rem;
		font-family: $fontstitle;
		font-weight: 700;
	}
	h2 {
		font-size: 2rem;
		font-family: $fontstitle;
		font-weight: 700;
	}
	h3 {
		font-size: 1.25rem;
		font-family: $fontstitle;
		font-weight: 700;
	}

	p {
		font-size: 1rem;
		font-family: $fontstext;
		font-weight: 300;
	}
	img {
		object-fit: cover;
		object-position: center;
	}
</style>
